<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    TextView-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/motivation_text"
        android:textSize="30sp"
        android:textColor="#85FF0052"
        android:textStyle="italic"
        android:maxLines="3"
        android:ellipsize="end"
        android:shadowColor="@color/black"
        android:shadowDx="7"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:alpha="0.7"
        />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp"
        android:background="@color/teal_200"
        tools:srcCompat="@drawable/pngwin"
        android:layout_marginEnd="120dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Клац-клац!"
        android:layout_marginTop="80dp"/>


<!--    Обращение к текстовому ресурсу из res->values->strings.xml-->


<!--    <TextView-->
<!--        android:id="@+id/textView"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textSize="30sp"-->
<!--        android:layout_gravity="center"-->
<!--        android:text="@string/res_text"-->
<!--        android:textColor="@color/teal_200"/>-->

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_animal_1769728"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/button_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/my_margin"
        android:layout_marginTop="5dp"
        android:text="Toast"
        android:textSize="30sp"
        android:enabled="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_recnagle"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:text="shape-rectangle"
        android:background="@drawable/rectangle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/layer_list"
        android:layout_gravity="center"
        android:text="LayerList"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/rectangle_into_oval"/>

<!--    Обработка состояния кнопки: нажата/отпущена-->

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/selectors_in_button"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:layout_marginStart="140dp"
        android:text="selectors"
        android:background="@drawable/selectors_with_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/ripple_in_drawable"
        android:text="ripple_in"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:background="?android:attr/selectableItemBackground" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/ripple_out_drawable"
        android:text="ripple_out"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:background="?android:attr/selectableItemBackgroundBorderless" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ripple_mydesign_effects"
        android:text="ripple_my_effects"
        android:layout_gravity="center"
        android:layout_marginTop="310dp"
        android:background="@drawable/riple" />

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        tools:srcCompat="@drawable/pngwin"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="120dp"/>


</FrameLayout>